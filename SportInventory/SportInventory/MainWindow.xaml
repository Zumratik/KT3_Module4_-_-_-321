<Window x:Class="SportInventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportInventory"
        mc:Ignorable="d"
        Title="ИС по прокату спортивного инвентаря" Height="650" Width="1000" WindowStartupLocation="CenterScreen" MinHeight="650" MinWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0" Background="#FF76E383">
            <Image Source="Pictures/logo.png" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0"></Image>
            <TextBlock Text="ИС по прокату спортивного инвентаря" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"></TextBlock>
        </Grid>
        <Frame x:Name="MainFrame"  NavigationUIVisibility="Hidden" Grid.Row="1" ></Frame>
    </Grid>
</Window>
